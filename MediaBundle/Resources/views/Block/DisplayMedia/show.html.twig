<div {% if id -%}
        id="{{ id }}"
    {%- endif -%}
    {%- if class -%}
        class="{{ class }}"
    {%- endif %}>
    {% if linkUrl is not null %}
        <a href="{{ url(linkUrl.id) }}">
            <img
                src="{{ get_media_format_url_from_string(picture) }}"
                alt="{{ get_media_alt_from_string(picture) }}"
            />
        </a>
    {% else %}
        <img
            src="{{ get_media_format_url_from_string(picture) }}"
            alt="{{ get_media_alt_from_string(picture) }}"
        />
    {% endif %}
</div>
