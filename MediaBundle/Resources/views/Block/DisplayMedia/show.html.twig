<div {% if id -%}
        id="{{ id }}"
    {%- endif -%}
    {%- if class -%}
        class="{{ class }}"
    {%- endif %}>
    {% if linkUrl is not null %}
        <a href="{{ url(linkUrl.id) }}">
            <img src="{{ get_media_format_url(picture, imageFormat) }}" alt="{{ get_media_alt(picture) }}"/>
        </a>
    {% else %}
        <img src="{{ get_media_format_url(picture, imageFormat) }}" alt="{{ get_media_alt(picture) }}"/>
    {% endif %}
</div>
